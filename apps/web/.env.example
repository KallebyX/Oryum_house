# =================================================================
# ORYUM HOUSE - FRONTEND CONFIGURATION
# =================================================================
# Copy this file to .env.local and fill in your values
# Next.js loads .env.local by default in development
# =================================================================

# =================================================================
# APPLICATION
# =================================================================
# Public variables (exposed to browser - prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_APP_NAME="Oryum House"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =================================================================
# API CONFIGURATION
# =================================================================
# Backend API URL
# Development: http://localhost:3001
# Production: https://api.your-domain.com
NEXT_PUBLIC_API_URL="http://localhost:3001"

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# =================================================================
# DATABASE (Neon PostgreSQL - for Server Components)
# =================================================================
# Pooled connection (recommended)
DATABASE_URL="postgresql://USER:PASSWORD@HOST-pooler.REGION.aws.neon.tech/DATABASE?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://USER:PASSWORD@HOST-pooler.REGION.aws.neon.tech/DATABASE?connect_timeout=15&sslmode=require"

# =================================================================
# NEXTAUTH CONFIGURATION
# =================================================================
# URL where this Next.js app is running
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# Secret for signing tokens (generate with: openssl rand -base64 32)
# MUST be different from backend JWT_SECRET
NEXTAUTH_SECRET="your-unique-nextauth-secret-change-this"

# =================================================================
# NEON AUTH (Stack Auth - Optional)
# =================================================================
NEXT_PUBLIC_STACK_PROJECT_ID=""
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=""
STACK_SECRET_SERVER_KEY=""

# =================================================================
# OAUTH PROVIDERS (Optional)
# =================================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (if needed)
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# =================================================================
# PWA CONFIGURATION
# =================================================================
# Web Push Notifications (VAPID public key from backend)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"

# PWA settings
NEXT_PUBLIC_PWA_ENABLED=true

# =================================================================
# ANALYTICS (Optional)
# =================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=""

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=""

# =================================================================
# ERROR TRACKING (Optional)
# =================================================================
# Sentry DSN for frontend error tracking
NEXT_PUBLIC_SENTRY_DSN=""

# =================================================================
# MAPS (Optional)
# =================================================================
# Google Maps API key (if using maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# =================================================================
# FILE UPLOAD
# =================================================================
# Maximum file size in bytes (10MB = 10485760)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# =================================================================
# FEATURES
# =================================================================
# Feature flags (enable/disable features)
NEXT_PUBLIC_FEATURE_GAMIFICATION=true
NEXT_PUBLIC_FEATURE_ASSEMBLIES=true
NEXT_PUBLIC_FEATURE_CHAT=false
NEXT_PUBLIC_FEATURE_MAINTENANCE=true

# =================================================================
# BRANDING
# =================================================================
# Company/Condominium branding
NEXT_PUBLIC_BRAND_COLOR="#3b82f6"
NEXT_PUBLIC_BRAND_LOGO_URL="/logo.png"

# =================================================================
# LOCALIZATION
# =================================================================
# Default language
NEXT_PUBLIC_DEFAULT_LOCALE="pt-BR"

# Timezone
NEXT_PUBLIC_TIMEZONE="America/Sao_Paulo"

# =================================================================
# WEBSOCKET (Optional)
# =================================================================
# WebSocket server URL for real-time updates
# Should point to your backend WebSocket endpoint
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# =================================================================
# DEVELOPMENT
# =================================================================
# Enable debug mode (shows additional logs in console)
NEXT_PUBLIC_DEBUG=false

# Show API response times in console
NEXT_PUBLIC_LOG_API_CALLS=false

# =================================================================
# NOTES
# =================================================================
# 1. NEVER commit .env.local to version control
# 2. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 3. Server-only secrets should NOT have NEXT_PUBLIC_ prefix
# 4. Restart dev server after changing .env files
# 5. Use different .env files for different environments:
#    - .env.local (local development - git ignored)
#    - .env.development (shared development settings)
#    - .env.production (production settings)
# =================================================================
