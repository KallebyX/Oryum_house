# ===========================================
# ORYUM HOUSE - Production Environment Config
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env files with real secrets!

# -------------------------------------------
# Database (Neon PostgreSQL)
# -------------------------------------------
# Pooled connection (recommended for most uses via pgbouncer)
DATABASE_URL=postgresql://USER:PASSWORD@HOST-pooler.REGION.aws.neon.tech/DATABASE?sslmode=require

# Direct connection without pooling (required for Prisma migrations)
DATABASE_URL_UNPOOLED=postgresql://USER:PASSWORD@HOST.REGION.aws.neon.tech/DATABASE?sslmode=require

# Prisma-optimized connection string
POSTGRES_PRISMA_URL=postgresql://USER:PASSWORD@HOST-pooler.REGION.aws.neon.tech/DATABASE?connect_timeout=15&sslmode=require

# Individual database parameters (for reference)
PGHOST=HOST-pooler.REGION.aws.neon.tech
PGUSER=USER
PGDATABASE=DATABASE
PGPASSWORD=PASSWORD

# -------------------------------------------
# Authentication & Security
# -------------------------------------------
# JWT secrets - generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_LONG_RANDOM_STRING

# NextAuth.js
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# -------------------------------------------
# CORS & API Configuration
# -------------------------------------------
NODE_ENV=production
API_PORT=3001
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# -------------------------------------------
# Object Storage (MinIO/S3)
# -------------------------------------------
MINIO_ROOT_USER=oryumhouse
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_123

S3_ENDPOINT=https://s3.your-domain.com
S3_ACCESS_KEY=oryumhouse
S3_SECRET_KEY=CHANGE_THIS_MINIO_PASSWORD_123
S3_BUCKET=oryumhouse-files
S3_REGION=us-east-1

# -------------------------------------------
# Redis (Caching & Sessions)
# -------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# -------------------------------------------
# Email (SMTP)
# -------------------------------------------
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=YOUR_EMAIL_PASSWORD
SMTP_FROM=Oryum House <noreply@your-domain.com>

# -------------------------------------------
# OAuth Providers (Optional)
# -------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -------------------------------------------
# Web Push Notifications (Optional)
# -------------------------------------------
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# -------------------------------------------
# Monitoring & Logging (Optional)
# -------------------------------------------
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# -------------------------------------------
# Feature Flags
# -------------------------------------------
NEXT_PUBLIC_FEATURE_GOOGLE_AUTH=true
NEXT_PUBLIC_FEATURE_PWA=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
